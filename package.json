{
  "name": "randar-market",
  "version": "1.0.0",
  "private": true,
  "description": "Randar Market - TON/Telegram NFT marketplace with Radar subscription",
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "dev": "concurrently -k \"pnpm --filter ./apps/backend dev\" \"pnpm --filter ./apps/frontend dev\"",
    "dev:backend": "pnpm --filter ./apps/backend dev",
    "dev:frontend": "pnpm --filter ./apps/frontend dev",
    "build": "pnpm -r --filter ./apps/frontend --filter ./apps/backend build",
    "start": "pnpm --filter ./apps/backend start",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "docker:up": "docker compose -f infra/docker-compose.yml up --build",
    "docker:down": "docker compose -f infra/docker-compose.yml down",
    "docker:logs": "docker compose -f infra/docker-compose.yml logs -f",
    "clean": "pnpm -r clean",
    "install:all": "pnpm install",
    "init:db": "pnpm --filter ./apps/backend db:gen && pnpm --filter ./apps/backend db:push"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "ton",
    "telegram",
    "nft",
    "marketplace",
    "radar",
    "subscription"
  ],
  "author": "Randar Team",
  "license": "MIT"
}
